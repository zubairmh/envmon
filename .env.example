# ============================================================================
# Application Settings
# ============================================================================

# Application name and version (shared across all environments)
APP_NAME=MyApp
APP_VERSION=1.0.0

# [dev] Development environment
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# [staging] Staging environment
NODE_ENV=staging
DEBUG=true
LOG_LEVEL=info

# [prod] Production environment
NODE_ENV=production
DEBUG=false
LOG_LEVEL=warn

# ============================================================================
# Server Configuration
# ============================================================================

# [dev] Local development server
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000

# [staging] Staging server
PORT=8080
HOST=0.0.0.0
BASE_URL=https://staging.myapp.com

# [prod] Production server
PORT=8080
HOST=0.0.0.0
BASE_URL=https://myapp.com

# ============================================================================
# Database Configuration
# ============================================================================

# [dev] Local database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp_dev
DB_USER=postgres
DB_PASSWORD=postgres123
DB_SSL_MODE=disable

# [staging] Staging database
DB_HOST=staging-db.example.com
DB_PORT=5432
DB_NAME=myapp_staging
DB_USER=myapp_staging_user
DB_PASSWORD=staging_password_here
DB_SSL_MODE=require

# [prod] Production database
DB_HOST=prod-db.example.com
DB_PORT=5432
DB_NAME=myapp_prod
DB_USER=myapp_prod_user
DB_PASSWORD=prod_password_here
DB_SSL_MODE=require

# Database connection pool settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=300

# ============================================================================
# Redis / Cache Configuration
# ============================================================================

# [dev] Local Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL=300

# [staging/prod] Remote Redis with authentication
REDIS_URL=redis://cache.example.com:6379
REDIS_PASSWORD=redis_password_here
CACHE_TTL=3600

# ============================================================================
# MongoDB Configuration (Alternative NoSQL Database)
# ============================================================================

# [dev] Local MongoDB
MONGO_URI=mongodb://localhost:27017/myapp_dev
MONGO_DB_NAME=myapp_dev

# [staging] Staging MongoDB
MONGO_URI=mongodb+srv://staging-cluster.example.com/myapp_staging
MONGO_DB_NAME=myapp_staging

# [prod] Production MongoDB
MONGO_URI=mongodb+srv://prod-cluster.example.com/myapp_prod
MONGO_DB_NAME=myapp_prod

# ============================================================================
# Authentication & Security
# ============================================================================

# [~prod] Development/Staging JWT (shorter expiry)
JWT_SECRET=dev_jwt_secret_change_me_in_production
JWT_EXPIRY=24h
SESSION_SECRET=dev_session_secret

# [prod] Production JWT (longer expiry, stronger secret)
JWT_SECRET=prod_jwt_secret_super_secure_random_string
JWT_EXPIRY=7d
SESSION_SECRET=prod_session_secret_super_secure

# Cookie settings
# [~prod] Development cookies (less strict)
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# [prod] Production cookies (strict security)
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

